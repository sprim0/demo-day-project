                  <div class="rating">Rating: <%= (it.averageRating||0).toFixed(1) %> (<%= it.ratingsCount||0 %>)</div>
                  <div><label><input type="checkbox" name="compareIds" value="<%= it._id %>"> Compare</label></div>
                </div>
              </div>
            <% }) %> -->
              <!-- </div> -->
              <div class="compare-actions">
                <button class="btn btn-info" onclick="submitCompare()">Compare Selected</button>
              </div>
      </div>
    </div>
  </div>
</body>

</html>

